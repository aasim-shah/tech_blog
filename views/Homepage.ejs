        <% if(messages.success){%>
            <p class="text-black w-9/12 sm:w-6/12 mx-auto py-2 bg-green-200 rounded-md text-center my-2">
                <%= messages.success %>
            </p>
            <% } %>
                <% if(messages.error){%>
                    <p class="text-black w-8/12 mx-auto py-2 bg-red-200 text-center my-2 rounded-md">
                        <%= messages.error %>
                    </p>
                    <% } %>





                        <div class="flex flex-col sm:flex-row">

                            <div class="w-11/12  sm:w-12/12 pl-4   my-2 mx-auto sm:ml-auto bg-white ">
                                <div class="grid grid-cols-12 mb-3 gap-2 mt-12">
                                    <% if(randomPost) {%>
                                        <a class="col-span-12  sm:col-span-8 mb-auto border relative"
                                            href="/article/view/<%= randomPost._id%>">
                                            <div class="card">
                                                <img src="/uploads/<%= randomPost.image %>" class="rounded-sm w-full"
                                                    alt="">
                                                <span
                                                    class="absolute bottom-0 z-[3] bg-[#00000075] w-full py-3 px-1 opacity[.3] text-sm font-semibold text-white">
                                                    <%= randomPost.headline.toString().slice(0,100) %>
                                                </span>
                                            </div>
                                        </a>
                                        <%} %>

                                            <% if(articles.length> 0) {%>
                                                <% articles.slice(0,4).forEach((article)=>{%>
                                                    <a class="col-span-12  sm:col-span-4 mb-auto border relative"
                                                        href="/article/view/<%= article._id%>">
                                                        <div class="card">
                                                            <img src="/uploads/<%= article.image %>"
                                                                class=" w-full rounded-sm" alt="">
                                                            <span
                                                                class="absolute title bottom-0 z-[3] bg-[#00000075] w-full py-1 px-1 opacity[.3] text-sm font-semibold text-white">
                                                                <%= article.headline.toString().slice(0,100) %>
                                                            </span>
                                                        </div>
                                                    </a>
                                                    <%}) %>
                                                        <%} %>
                                </div>



                                <div class="w-11/12 mt-12 border-t-2  py-4 sm:w-full  my-2 mx-auto sm:ml-auto bg-white">
                                    <p class="text-xl mb-5 font-black textThemeClr">Recent Posts</p>
                                    <% if(articles.length> 0) {%>
                                        <% articles.slice(0,8).forEach((article)=>{%>
                                            <a href="/article/view/<%= article._id%>">
                                                <div class="grid grid-cols-12  mb-5 pb-5 border-b-2">
                                                    <div class="col-span-11 sm:col-span-4">
                                                        <img src="/uploads/<%= article.image %>" alt="">
                                                    </div>
                                                    <div class="col-span-11 sm:col-span-8">
                                                        <p class="text-3xl font-black pl-5">
                                                            <%= article.headline %>
                                                        </p>
                                                        <div class=" mt-4 ml-5">
                                                            <%- article.content.toString().slice(0 , 140) %>
                                                        </div>

                                                        <p class="text-sm mt-4 pl-5"> By
                                                            <span>
                                                                <%= article.authorName %>
                                                            </span> . <%= moment(article.createdAt).fromNow() %>
                                                        </p>

                                                    </div>
                                                </div>
                                            </a>
                                            <%}) %>
                                                <%} %>

                                </div>

                            </div>


                            <div class="flex flex-col sm:w-4/12">
                                <div class="flex ml-5 ">
                                    <div
                                        class="border py-2 px-2 mt-12 h-fit rounded-md border-green-500 my-4 w-11/12 mx-auto">
                                        <p class="text-lg my-2  px-2 border-b-4 w-40 border-[#215f45fd] mx-2 font-bold">
                                            Latest Articles</p>

                                        <% if(articles.length> 0) {%>
                                            <% articles.slice(0, 6).forEach((article)=>{%>
                                                <div class="ml-2 my-6">
                                                    <p
                                                        class="pb-4 text-md textThemeClr border-b-2 border-[#1c91308c] py-1 px-2">
                                                        <a href="/article/view/<%= article._id %>">
                                                            <%= article.headline %>
                                                        </a>
                                                    </p>
                                                </div>

