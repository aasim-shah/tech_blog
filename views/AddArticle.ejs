    <div class="w-full flex justify-center items-center">
    <div class="w-11/12 sm:w-7/12  mx-auto my-6">
        <% if(messages.error){%>
            <p class="text-black w-8/12 mx-auto py-2 bg-red-200 text-center my-2"><%= messages.error %></p>
      <% }  %>
    

        <form method="post" action="/article/new" enctype="multipart/form-data">
            <div class="mb-3">
              <input type="text" required name="headline" placeholder="Headline ...." class="outline-blue-300  border-2 py-2 px-3 w-full rounded-md" >
            </div>
            <div class="mb-3">
              <input name="subHeadline"    type="text" placeholder="subHeadline .... " class="outline-blue-300  border-2 py-2 px-3 w-full rounded-md">
            </div>
            
            <div class="mb-3">
                <input name="image" required  type="file"  class="outline-blue-300  border-2 py-2 px-3 w-full rounded-md">
              </div>

            <div class="mb-3">
              <!-- <div id="div_editor1" name="content"  class="outline-blue-300   border-2 py-2 px-3 sm:w-7/12 rounded-md"> -->

                <textarea id="inp_editor1" name="content" required  rows="4" class="outline-blue-300  border-2 py-2 px-3 sm:w-11/12  rounded-md" placeholder="Content ....">
                 </textarea> 
               <!-- <textarea name="content" required id=""  rows="4" class="outline-blue-300  border-2 py-2 px-3 w-full rounded-md" placeholder="Content ...."></textarea> -->
            </div>
            <div class="">
              <button type="submit" class="py-1 px-3 bg-yellow-400 text-white bgThemeClr rounded-sm font-bold w-full">Add Article</button>
            </div>

           
            
          </form>
       
        </div>
    
     
